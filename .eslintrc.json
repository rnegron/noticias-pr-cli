{
  "root": true,
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "semistandard", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "rules": {
    "prettier/prettier": "error"
  }
}
