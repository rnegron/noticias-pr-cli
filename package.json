{
  "name": "noticias-pr",
  "version": "0.4.0",
  "description": "Lee las noticias locales desde tu terminal",
  "scripts": {
    "cli": "DEBUG=noticias-pr,noticieros:endi,noticieros:primerahora,noticieros:noticel node cli.js",
    "test": "NODE_ENV=test nyc mocha",
    "lint": "eslint cli.js lib/** test/**",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "main": "cli.js",
  "repository": "rnegron/noticias-pr-cli",
  "bugs": {
    "url": "https://github.com/rnegron/noticias-pr-cli/issues"
  },
  "author": {
    "name": "Raúl Negrón",
    "email": "raul@raulnegron.me",
    "url": "https://raulnegron.me"
  },
  "license": "MIT",
  "bin": "cli.js",
  "engines": {
    "node": ">=8"
  },
  "files": [
    "lib",
    "cli.js"
  ],
  "keywords": [
    "cli-app",
    "cli",
    "command-line",
    "console",
    "terminal",
    "news",
    "noticias",
    "puerto-rico",
    "pr"
  ],
  "semistandard": {
    "env": [
      "mocha"
    ]
  },
  "nyc": {
    "include": [
      "lib/noticieros/**",
      "cli.js"
    ]
  },
  "dependencies": {
    "@postlight/mercury-parser": "^2.1.1",
    "ansi-escapes": "^4.2.1",
    "cfonts": "^2.4.5",
    "date-fns": "^2.1.0",
    "got": "^9.6.0",
    "html2plaintext": "^2.1.2",
    "is-reachable": "^3.1.0",
    "ora": "^3.4.0",
    "prompts": "^2.2.1",
    "terminal-image": "^0.2.0",
    "terminal-link": "^2.0.0",
    "x-ray": "^2.3.4"
  },
  "devDependencies": {
    "coveralls": "^3.0.6",
    "debug": "^4.1.1",
    "eslint": "^6.3.0",
    "eslint-config-semistandard": "^15.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^6.2.0",
    "nock": "^11.3.3",
    "nyc": "^14.1.1",
    "sinon": "^7.4.2"
  }
}
