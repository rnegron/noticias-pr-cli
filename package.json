{
  "name": "noticias-pr",
  "version": "0.12.0",
  "description": "Lee las noticias locales desde tu terminal",
  "type": "module",
  "scripts": {
    "cli": "DEBUG=noticias-pr,noticieros:endi,noticieros:primerahora,noticieros:noticel,noticieros:elvocero node cli.js",
    "test": "NODE_ENV=test nyc mocha",
    "lint": "eslint cli.js \"lib/**\" \"test/**\"",
    "coverage": "eslint . && nyc report --reporter=text-lcov | coveralls",
    "upgrade-interactive": "npm-check --update",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "exports": "./cli.js",
  "repository": "rnegron/noticias-pr-cli",
  "bugs": {
    "url": "https://github.com/rnegron/noticias-pr-cli/issues"
  },
  "author": {
    "name": "Raúl Negrón",
    "email": "raul@raulnegron.me",
    "url": "https://raulnegron.me"
  },
  "license": "MIT",
  "bin": "cli.js",
  "engines": {
    "node": ">=14.16"
  },
  "files": [
    "lib",
    "cli.js"
  ],
  "keywords": [
    "cli-app",
    "cli",
    "command-line",
    "console",
    "terminal",
    "news",
    "noticias",
    "puerto-rico",
    "pr"
  ],
  "semistandard": {
    "env": [
      "mocha"
    ]
  },
  "nyc": {
    "include": [
      "lib/noticieros/**",
      "cli.js"
    ]
  },
  "dependencies": {
    "@postlight/mercury-parser": "^2.2.1",
    "ansi-escapes": "^5.0.0",
    "cfonts": "^3.1.1",
    "date-fns": "^2.29.1",
    "got": "^12.3.1",
    "html2plaintext": "^2.1.4",
    "is-reachable": "^5.2.1",
    "ora": "^6.1.2",
    "prompts": "^2.4.2",
    "terminal-image": "^2.0.0",
    "terminal-link": "^3.0.0",
    "x-ray": "^2.1.0"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "coveralls": "^3.1.1",
    "debug": "^4.3.4",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "nock": "^13.2.9",
    "npm-check": "^6.0.1",
    "nyc": "^15.1.0",
    "pinst": "^3.0.0",
    "prettier": "2.7.1",
    "prettier-eslint": "^15.0.1",
    "sinon": "^14.0.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
