{
  "name": "noticias-pr",
  "version": "0.10.2",
  "description": "Lee las noticias locales desde tu terminal",
  "scripts": {
    "cli": "DEBUG=noticias-pr,noticieros:endi,noticieros:primerahora,noticieros:noticel,noticieros:elvocero node cli.js",
    "test": "NODE_ENV=test nyc mocha",
    "lint": "eslint cli.js lib/** test/**",
    "coverage": "eslint . && nyc report --reporter=text-lcov | coveralls"
  },
  "main": "cli.js",
  "repository": "rnegron/noticias-pr-cli",
  "bugs": {
    "url": "https://github.com/rnegron/noticias-pr-cli/issues"
  },
  "author": {
    "name": "Raúl Negrón",
    "email": "raul@raulnegron.me",
    "url": "https://raulnegron.me"
  },
  "license": "MIT",
  "bin": "cli.js",
  "engines": {
    "node": ">=10"
  },
  "files": [
    "lib",
    "cli.js"
  ],
  "keywords": [
    "cli-app",
    "cli",
    "command-line",
    "console",
    "terminal",
    "news",
    "noticias",
    "puerto-rico",
    "pr"
  ],
  "semistandard": {
    "env": [
      "mocha"
    ]
  },
  "nyc": {
    "include": [
      "lib/noticieros/**",
      "cli.js"
    ]
  },
  "dependencies": {
    "@postlight/mercury-parser": "^2.2.0",
    "ansi-escapes": "^4.3.1",
    "cfonts": "^2.8.1",
    "date-fns": "^2.12.0",
    "got": "^10.7.0",
    "html2plaintext": "^2.1.2",
    "is-reachable": "^4.0.0",
    "ora": "^4.0.2",
    "prompts": "^2.3.2",
    "terminal-image": "^1.2.0",
    "terminal-link": "^2.1.1",
    "x-ray": "^2.3.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.11",
    "debug": "^4.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-semistandard": "^15.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^7.1.1",
    "nock": "^12.0.3",
    "nyc": "^15.0.1",
    "prettier": "^1.19.1",
    "sinon": "^8.1.1"
  }
}
