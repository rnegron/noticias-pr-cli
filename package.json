{
  "name": "noticias-pr",
  "version": "0.11.0",
  "description": "Lee las noticias locales desde tu terminal",
  "scripts": {
    "cli": "DEBUG=noticias-pr,noticieros:endi,noticieros:primerahora,noticieros:noticel,noticieros:elvocero node cli.js",
    "test": "NODE_ENV=test nyc mocha",
    "lint": "eslint cli.js \"lib/**\" \"test/**\"",
    "coverage": "eslint . && nyc report --reporter=text-lcov | coveralls",
    "upgrade-interactive": "npm-check --update",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "main": "cli.js",
  "repository": "rnegron/noticias-pr-cli",
  "bugs": {
    "url": "https://github.com/rnegron/noticias-pr-cli/issues"
  },
  "author": {
    "name": "Raúl Negrón",
    "email": "raul@raulnegron.me",
    "url": "https://raulnegron.me"
  },
  "license": "MIT",
  "bin": "cli.js",
  "engines": {
    "node": ">=10"
  },
  "files": [
    "lib",
    "cli.js"
  ],
  "keywords": [
    "cli-app",
    "cli",
    "command-line",
    "console",
    "terminal",
    "news",
    "noticias",
    "puerto-rico",
    "pr"
  ],
  "semistandard": {
    "env": [
      "mocha"
    ]
  },
  "nyc": {
    "include": [
      "lib/noticieros/**",
      "cli.js"
    ]
  },
  "dependencies": {
    "@postlight/mercury-parser": "^2.2.0",
    "ansi-escapes": "^4.3.1",
    "cfonts": "^2.9.1",
    "date-fns": "^2.17.0",
    "got": "^11.8.1",
    "html2plaintext": "^2.1.2",
    "is-reachable": "^5.0.0",
    "ora": "^5.3.0",
    "prompts": "^2.3.2",
    "terminal-image": "^1.2.1",
    "terminal-link": "^2.1.1",
    "x-ray": "^2.3.4"
  },
  "devDependencies": {
    "chai": "^4.3.0",
    "coveralls": "^3.0.11",
    "debug": "^4.1.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-semistandard": "^15.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^5.0.9",
    "lint-staged": "^12.3.3",
    "mocha": "^8.3.0",
    "nock": "^13.0.7",
    "npm-check": "^5.9.2",
    "nyc": "^15.0.1",
    "pinst": "^2.1.4",
    "prettier": "2.2.1",
    "sinon": "^9.2.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
